/* pages/detailArticle/detailArticle.wxss */
.allPage{
  height: 100%;
  width: 100%;
  color: #333333;
}
.row{
  /* border-bottom: 4rpx solid #e3e3e3; */
  padding: 30rpx 30rpx 0 30rpx;
}
.row-top{
  border-top: 4rpx solid #e3e3e3;
  padding: 30rpx 30rpx 0 30rpx;
}
.mainCon{
  padding: 30rpx 30rpx 50rpx 30rpx;
}
.bodya{
  width: 100%;
  height: 100%; 
}
.bodyb{
  width: 100%;
  height: calc(100% - 100rpx); 
}
/* 文章部分 */
.articleCon{
  font-size: 36rpx;
  line-height: 150%;
}
/* 文章标题 */
.articleTitle{
  font-size: 48rpx;
}
/* 文章来源以及发表日期 */
.articleMaked{
  font-size: 30rpx;
  color: #999999;
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0;
}
/* 播放的视频 */
.playPart{
  position: absolute;
  background: rgba(0, 0, 0, 0.9);
  height: 100%;
  width: 100%;
  z-index:99;
}
.videoPlayCon{
  line-height: 420rpx;
  height: 420rpx; 
  width: 100%;
  position: absolute;
  top: calc(50% - 210rpx);
  z-index:100;
}
.audioPlayCon{
  position: fixed;
  background: #EEEEEE;
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
}
.audioPlayCon-item{
  width: 100%;
  display: flex;
}
.audioTitle{
  padding: 0 30rpx;
  width: 65%;
}
.audioDuration{
  width: 11%;
  padding-right: 20rpx;
}
.closeBt{
  float: right;
  top: -20rpx;
  left: 10rpx;
}
.pauseBt{
  top: 12rpx;
  left: -5rpx;
}
.playBt{
  top: 4rpx;
  left: -2rpx;
}
.audioBt{
  position: relative;
  width: 45rpx;
  height: 45rpx;
}
.playBt image, .closeBt image{
  height: 80%;
  width: 80%; 
}
.pauseBt image{
  height: 100%;
  width: 100%; 
}
/* 插入的视频 */
.videoCon{
  height: 420rpx; 
  width: 690rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}
.videoCon image{
  height: 100%;
  width: 100%; 
}
.playSign{
  height: 98rpx;
  width: 98rpx;
  position: relative; 
  top: -259rpx;
}
.playSignA{
  
}
.playSignV{
  left: 45rpx;
}
.playSign image, .playSign1 image{
  height: 100%;
  width: 100%;
  /* position: absolute;
  top: -260rpx;
  left: 295rpx; */
}
/*视频栏目的视频时长显示*/
.position-videoTime{
  position: relative;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 2px;
  color: #FFFFFF;
  text-align: center;
  top: -80rpx;
  left: 240rpx;
  width: 90rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 30rpx;
}
video{
  height: 100%;
  width: 100%; 
}
/*责任编辑*/
.articleEditor{
  color: #999999;
  display: flex;
  justify-content: flex-end;
  margin-top: 50rpx;
}
/* 相关阅读和热门评论 */
.relat-dis{
  padding: 0 10rpx;
}
.row1{
  border-bottom: 2rpx solid #e3e3e3;
  padding: 30rpx 0;
}
.row2{
  padding: 30rpx 0;
}
.mainContBox{
  display: flex;
  flex-wrap: nowrap;
}
.col-text-1{
  margin-left: 30rpx;
}
.con-pics{
  height: 155rpx;
  width: 230rpx;
}
.home-text{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}
.noImg .articleTitle-related{
  margin-bottom: 30rpx; 
}
.articleTitle-related{
  font-size: 30rpx;
  width: 430rpx;
}
.atrticle-source, .atrticle-publishtime{
  font-size: 24rpx;
  color: #999999;
  margin-right: 20rpx;
}
image{
  height:100%;
  width:100%;
}
.atrticle-marked-noImg{
  display: flex;
  justify-content: flex-end;
  float: right;
  display: inline-block;
}
.positionVideo image{
  position: relative;
  height: 60rpx;
  width: 60rpx;
  top: -107rpx;
  left: 90rpx;
}
/* 视频稿件的视频时长 */
.positionVideoTime{
  position: relative;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 2px;
  top: -125rpx;
  left: 160rpx;
  width: 62rpx;
  height: 25rpx;
  line-height: 25rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  text-align: center;
  padding: 2rpx;
}
.reTitle{
  height: 105rpx;
  line-height: 42rpx;
  font-size: 30rpx;
  color: #333333;
}
/* 热门评论 */
.comment{
  display: flex;
}
.comCon{
  font-size: 30rpx;
  line-height: 150%;
  margin: 0 30rpx;
  display: flex;
  flex-direction: column;
}
.comMarked, .userName{
  color: #999999;
  font-size: 26rpx;
}
.userName{
  height: 50rpx;
  line-height: 50rpx;
}
.comText{
  margin: 30rpx 0;
}
.userIcon{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 1px solid #f6f6f6;
}
.userIcon image{
  height: 100%;
  width: 100%;
  border-radius: 50%;
}
rich-text{
  line-height: 1.5;
}