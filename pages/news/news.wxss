/* pages/news/news.wxss */
/*导航栏*/
.labels{
  z-index: 200;
  height: 86rpx;
  display: flex;
  align-items: center;
  background:#fff;
  font-size: 30rpx;
}
/* 隐藏滚动条 */
/* ::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
} */
/*导航栏被选中的tab*/
.label.active{
  border-width: 0 0 4rpx 0;  
  border-style: solid;
  font-size: 36rpx;
  /* align-self: flex-end; */
}
/*导航栏中其他的tab*/
.label{
  margin: 0 16rpx 15rpx 15rpx;
  padding: 10rpx 10rpx;
}
/*导航栏scrollView*/
.labelScroll{
  white-space: nowrap;
  width: 100%
}
.zw{
  width: 20rpx;
}
/*按导航栏生成对应的页面，以轮播图形式显示*/
.tab{
  width: 100%;
  height: calc(100% - 86rpx); 
  overflow: hidden;
}
.tab1{
  width: 100%;
  height: calc(100% - 186rpx); 
  overflow: hidden;
}
/*轮播图的图片*/
swiper-item .img{
  width: 100%;
  height: 100%;
}
/*可滚动区域*/
.bodya{
  height: 100%; 
}
