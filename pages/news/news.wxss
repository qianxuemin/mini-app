/*视频栏目*/
.videoConBox{
  position: relative;
  /*border-width: 0 0 20rpx 0;
  border-color: #e3e3e3;
  border-style: solid;*/
  box-shadow: 10rpx 2rpx 10rpx #cccccc;
  margin: 0 0 20rpx 0;
}
.col-text-video{
  position: absolute;
  z-index: 99;
  background: -webkit-linear-gradient(top, rgba(0, 0, 0, 0.5)0%, rgba(0, 0, 0, 0)50%);/* Safari、Chrome */
  background: -o-linear-gradient(bottom, rgba(0, 0, 0, 0.5)0%, rgba(0, 0, 0,0)50%);/* Opera */
  background: -moz-linear-gradient(bottom, rgba(0, 0, 0, 0.5)0%, rgba(0, 0, 0,0)50%);/* Firefox */
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.5)0%, rgba(0, 0, 0,0)50%); /* 标准的语法（必须放在最后） */
}
/*视频栏目下视频稿件的标题*/
.video-text view{
  padding: 30rpx 30rpx 20rpx 30rpx;
