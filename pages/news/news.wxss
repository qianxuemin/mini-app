} */
.swiperIndex{
  font-size: 30rpx;
}
.swiperCount{
  position: absolute;
  left: 700rpx;
  font-size: 22rpx;
  display: flex;
  white-space: nowrap;
  align-items: flex-end;
  padding: 0;
}
.row{
  font-size: 30rpx;
  color: #333333;
  border-width: 0 0 2rpx 0;
  border-color: #e3e3e3;
  border-style: solid;
  margin: 0 30rpx;
  padding: 28rpx 0;
}
/*文章列表中的大图稿件*/
.bigPicBox{
  display: flex;
  flex-wrap: wrap;
}
.mainContBox{
  display: flex;
  position: relative;
}
.mulPicBox{
  display: flex;
  flex-direction: column;
}
/*文章列表的title*/
.articleTitle{
  color: #333333;
  height: auto;
}
/*文章列表的title 显示一行文字*/
.articleTitle1{
  color: #333333;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box; 
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1; 
}
/*文章列表的title 显示两行文字*/
.articleTitle2{
  line-height: 42rpx;
  font-size: 30rpx;
  overflow: hidden; 
  text-overflow: ellipsis;
  display: -webkit-box; 
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; 
}
.home-text{
