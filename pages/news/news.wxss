.swiper-container{
  height: 100%;
  width: 750rpx;
}
.swiper{
  height: 400rpx;
  width: 750rpx;
}
.swiperTitle{
  height: 90rpx;
  width: 750rpx;
  background: rgba(0, 0, 0, 0.5);
  z-index: 99;
  position: absolute;
  top: 310rpx;
  font-size: 30rpx;
  color: #FFFFFF;
  display: flex;
  align-items: center;
}
.atitle{
  padding: 0 20rpx;
  width: 650rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
